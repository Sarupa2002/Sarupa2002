import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int i,j,n;
        char ch='A';
        n=sc.nextInt();
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=i;j++)
            {
                System.out.print(ch+" ");
                ch+=1;
            }
            System.out.print("\n");
        }
    }
}

---------------------------------------------------


A 
B C 
D E F 
G H I J 
K L M N O 
